<html metal:use-macro="here/main_template/macros/master">
  <metal:javascriptslot fill-slot="javascript_head_slot">
    <script
      src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js"
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var calendarEl = document.getElementById("calendar");
        var calendar = new FullCalendar.Calendar(calendarEl, {
          locale: "fr",
          firstDay: 1,
          themeSystem: "bootstrap5",
          headerToolbar: {
            /*start: "title today prev,next",*/
            start: "prev,next title",
            center: "",
            end: "",
            /*end: "listMonth,dayGridMonth",*/
          },
          initialView: "listMonth",
          /*hiddenDays: [0, 1, 3, 4, 6],*/
          /*eventDisplay: "block",*/
          listDayFormat: {
            month: "long",
            year: "numeric",
            day: "numeric",
            weekday: "long",
          },
          listDaySideFormat: false,
          eventSources: [{ url: "@@fullcalendar-events" }],
          eventBackgroundColor: "gray",
          eventClassNames: (arg) => "task-" + arg.event.extendedProps.category,
          eventContent: (arg) => ({
            html: arg.event.extendedProps.event_html,
          }),
          eventClick: (arg) => {
            /*alert("Event: " + arg.event.title);*/
          },
        });
        calendar.render();
        /* TODO window.patternslib.scan($("#calendar"));*/
      });
    </script>
  </metal:javascriptslot>

  <metal:main fill-slot="content-core">
    <div id="calendar"></div>
  </metal:main>
</html>
